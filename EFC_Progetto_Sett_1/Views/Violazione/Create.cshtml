@model Violazione

@{
    ViewData["Title"] = "Add Violazione";
}

<h2>Aggiungi Violazione</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Descrizione</label>
        <input asp-for="Descrizione" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Punti Decurtati</label>
        <input asp-for="PuntiDecurtati" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Importo (€)</label>
        <input asp-for="Importo" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Salva</button> 
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
