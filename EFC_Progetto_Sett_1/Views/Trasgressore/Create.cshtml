@model TrasgressoreViewModel

@{
    ViewData["Title"] = "Add Trasgressore";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cognome">Cognome</label>
        <input asp-for="Cognome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Indirizzo">Indirizzo</label>
        <input asp-for="Indirizzo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Telefono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Home</a>
</form>



